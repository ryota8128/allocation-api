<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.moneyAllocation.repository.mybatis.TransferMapper">
    <resultMap id="Transfer" type="com.example.moneyAllocation.domain.Transfer">
        <id property="id" column="ID" />
        <result property="title" column="TITLE" />
        <result property="userId" column="USER_ID"/>
    </resultMap>

    <select id="find" resultMap="Transfer">
        SELECT
        ID,
        TITLE,
        USER_ID
        FROM TRANSFER
        <where>
            USER_ID = #{userId}
        </where>
        ORDER BY ID
    </select>

    <select id="findOne" resultMap="Transfer">
        SELECT
        ID,
        TITLE,
        USER_ID
        FROM TRANSFER
        <where>
            ID = #{id}
            AND
            USER_ID = #{userId}
        </where>
    </select>

</mapper>